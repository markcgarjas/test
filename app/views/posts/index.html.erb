<div class="text-center mb-4 text-light">
  <div class="container">
    <div class="d-flex justify-content-sm-around">
      <div class="col-7">
        <div class="card bg-dark">
          <div class="card-body">
            <h3>Disaster Information's</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% @posts.each do |post| %>
    <div class="container mt-2">
      <div class="d-flex justify-content-sm-around">
        <div class="col-7">
          <div class="card m-1">
            <div class="card-body">
              <%= image_tag ('hot2.png'), width: "90", height: "70", class: 'float-end' if @hot_posts.include?(post)%>
              <p class="fs-4"><span class="text-danger">Category: <%= post.types.pluck(:name).join(', ') %></span></p>
              <p class="fs-4"><strong>Title: </strong><%= post.title %></p>
              <p class="fs-4"><strong>Creator: </strong><%= post.user.email %></p>
              <p class="fs-4"><strong>Address: </strong><%= post.address %></p>

              <p class="fs-4"><strong>No. of Comments: </strong><%= post.comments_count %></p>
              <table>
                <thead>
                <tr>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <td><%= link_to 'Show', post_path(post), class: 'btn btn-outline-dark me-2' %></td>
                  <td><%= button_to 'Delete', post_path(post), class: 'btn btn-outline-danger me-2', :onclick => "return confirm('Are you sure you want to delete?')", method: :delete if post.user == current_user %></td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


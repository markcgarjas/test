<div class="text-center">
  <main class="form-signin w-100 m-auto">
    <div class="d-flex justify-content-sm-around align-content-center">
      <div class="col-3">
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <h1 class="h3 mb-3 fw-normal">Login</h1>
              <%= image_tag ('mm.jpeg'), width: "90", height: "70" %>

              <div class="form-floating mt-3">
                <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
                <br/>
                <%= f.label :email, for: "floatingInput" %>
              </div>
              <div class="form-floating">
                <%= f.password_field :password, class: "form-control", id: "floatingInput", placeholder: "Password" %>
                <br/>
                <%= f.label :password, for: "floatingInput" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="checkbox mb-3">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>

              </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
            <p class="mt-5 mb-1 text-muted">&copy;2022</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
